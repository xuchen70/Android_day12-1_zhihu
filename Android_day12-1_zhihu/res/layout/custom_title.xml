<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/custom_titlebar"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#00A2ED" >

    <ImageView
        android:id="@+id/menupic_custom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_navigation_drawer"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/logo_custom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="-5dp"
        android:layout_toRightOf="@+id/menupic_custom"
        android:src="@drawable/ic_logo"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/txt_title_custom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/logo_custom"
        android:textColor="#ffffff"
        android:textSize="18sp" />

</RelativeLayout>